<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.taras.gascalculation.AppUI.InPutFragment">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputMethane_ID"
        style="@style/TextInputLayout_Style">

        <EditText
            android:id="@+id/editMethane_ID"
            android:hint="@string/gas_methane"
            style="@style/EditText_Style"
            tools:ignore="LabelFor" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputMonoCarbon_ID"
        android:layout_below="@+id/inputMethane_ID"
        style="@style/TextInputLayout_Style">

        <EditText
            android:id="@+id/editMonoxideCarbon_ID"
            android:hint="@string/gas_carbon_monoxide"
            style="@style/EditText_Style" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputHydrogen_ID"
        android:layout_below="@+id/inputMonoCarbon_ID"
        style="@style/TextInputLayout_Style"
        >

        <EditText
            android:id="@+id/editHydrogen_ID"
            android:hint="@string/gas_hydrogen"
            style="@style/EditText_Style"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputDioCarbon_ID"
        android:layout_below="@+id/inputHydrogen_ID"
        style="@style/TextInputLayout_Style"
        >

        <EditText
            android:id="@+id/editDioxideCarbon_ID"
            android:hint="@string/gas_carbon_dioxide"
            style="@style/EditText_Style"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputNitrogen_ID"
        android:layout_below="@+id/inputDioCarbon_ID"
        style="@style/TextInputLayout_Style">

        <EditText
            android:id="@+id/editNitrogen_ID"
            android:hint="@string/gas_nitrogen"
            style="@style/EditText_Style"/>
    </android.support.design.widget.TextInputLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/relativeLayout_Buttons"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/inputNitrogen_ID"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/btn_getResult"
            android:text="@string/btn_result"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="36dp"
            tools:ignore="RelativeOverlap"
            style="@style/AppButton_Style" />

        <Button
            android:id="@+id/btn_check"
            android:text="@string/btn_check"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            style="@style/AppButton_Style" />

        <Button
            android:id="@+id/btn_about"
            android:text="@string/btn_about"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="36dp"
            style="@style/AppButton_Style" />
    </RelativeLayout>

</RelativeLayout>
